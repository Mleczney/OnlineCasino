@model IEnumerable<OnlineCasino.Models.Game>

@{
    ViewData["Title"] = "Games";
}

<h1>Games</h1>
<hr />

<p>
    <a asp-action="Create" class="btn btn-success">Create New Game</a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.MinBet)</th>
            <th>@Html.DisplayNameFor(model => model.MaxBet)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.MinBet)</td>
            <td>@Html.DisplayFor(modelItem => item.MaxBet)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info ms-1">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ms-1">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
