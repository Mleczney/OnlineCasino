@model OnlineCasino.Models.Game

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Game</h1>

<h4>Game</h4>
<hr />

<div class="row">
    <div class="col-md-6 col-lg-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MinBet" class="form-label"></label>
                <input asp-for="MinBet" class="form-control" />
                <span asp-validation-for="MinBet" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MaxBet" class="form-label"></label>
                <input asp-for="MaxBet" class="form-control" />
                <span asp-validation-for="MaxBet" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
