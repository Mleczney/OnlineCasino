@{
    ViewData["Title"] = "Online Casino";
}

<div class="hero-section text-center text-light py-5">
    <h1 class="display-2 fw-bold text-warning mb-3" style="text-shadow: 2px 2px 10px rgba(0,0,0,0.7);">
        Welcome to Nex Comet Casino
    </h1>
    <p class="lead fs-4 mb-5" style="text-shadow: 1px 1px 5px rgba(0,0,0,0.5);">
        If you're about to give up, what if the next bet is the jackpot?!
    </p>

    <div class="row g-4 mx-0 px-3">
        <div class="col-md-4">
            <div class="card bg-dark text-white h-100 border-warning border-2 shadow-lg hover-scale">
                <div class="card-body text-center">
                    <i class="bi bi-people-fill display-1 text-warning mb-3"></i>
                    <h5 class="card-title fw-bold">Players</h5>
                    <p class="card-text">Check all registered players and manage accounts.</p>
                    <a asp-controller="Players" asp-action="Index" class="btn btn-warning fw-bold">
                        Go to Players <i class="bi bi-arrow-right-circle"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-dark text-white h-100 border-warning border-2 shadow-lg hover-scale">
                <div class="card-body text-center">
                    <i class="bi bi-controller display-1 text-warning mb-3"></i>
                    <h5 class="card-title fw-bold">Games</h5>
                    <p class="card-text">Browse all available games and place your bets.</p>
                    <a asp-controller="Games" asp-action="Index" class="btn btn-warning fw-bold">
                        Go to Games <i class="bi bi-arrow-right-circle"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-dark text-white h-100 border-warning border-2 shadow-lg hover-scale">
                <div class="card-body text-center">
                    <i class="bi bi-currency-bitcoin display-1 text-warning mb-3"></i>
                    <h5 class="card-title fw-bold">Bets</h5>
                    <p class="card-text">Track all bets and game results.</p>
                    <a asp-controller="Bets" asp-action="Index" class="btn btn-warning fw-bold">
                        Go to Bets <i class="bi bi-arrow-right-circle"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* odstranění defaultního marginu a paddingu */
    body, html {
        margin: 0;
        padding: 0;
        width: 100%;
    }

    .hero-section {
        background: linear-gradient(135deg, #0b0c10, #1f2833);
        width: 100%;
    }

    .hover-scale:hover {
        transform: scale(1.05);
        transition: transform 0.3s ease-in-out;
    }

    .row.mx-0 {
        margin-left: 0 !important;
        margin-right: 0 !important;
    }
</style>
